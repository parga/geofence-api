# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation override for all JS and HTML directory
[*.{js,html}]
charset = utf-8
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .yml files under config
[{package.json, config/**/*.yml}]
indent_style = space
indent_size = 2
